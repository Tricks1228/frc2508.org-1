<% content_for :title, "Teams" %>

<% data.teams.each do |team| %>
  <% next if team.hidden.present? && team.hidden %>
  <div class="row">
    <div class="col-lg-12">
      <div class="page-header">
        <h2>
          <%= team.year %>
        </h2>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-4">
      <% if team.image.present? %>
        <img src="<%= team.image %>" class="img-thumbnail" />
      <% end %>
      <p></p>
      <table class="table table-bordered">
        <tr>
          <th>Year</th>
          <td><%= team.year %></td>
        </tr>
        <tr>
          <th>Challenge</th>
          <td><%= team.challenge %></td>
        </tr>
        <tr>
          <th>Awards</th>
          <td><%= team.awards %></td>
        </tr>
      </table>
    </div>
    <div class="col-lg-8">
      <b>Leadership:</b>
      <p>
        <%= team.leadership %>
      </p>
      <br />
      <% if team.about.present? %>
        <b>About:</b>
        <p>
          <%= team.about %>
        </p>
      <% end %>
    </div>
  </div>

<% end %>